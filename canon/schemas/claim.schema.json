{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Claim Schema",
  "type": "object",
  "required": ["claim_id", "text", "type"],
  "properties": {
    "claim_id": { "type": "string" },
    "text": { "type": "string" },
    "type": {
      "type": "string",
      "enum": ["principle", "interpretation", "historical", "theological", "governance"]
    },
    "provenance": {
      "type": "object",
      "properties": {
        "source_type": { "type": "string" },
        "source_ref": { "type": "string" },
        "commit": { "type": "string" },
        "doi": { "type": "string" }
      }
    }
  }
}