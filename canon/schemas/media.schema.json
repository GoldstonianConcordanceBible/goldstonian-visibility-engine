{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Media Schema",
  "type": "object",
  "required": ["media_id", "platform", "title"],
  "properties": {
    "media_id": { "type": "string" },
    "platform": { "type": "string" },
    "title": { "type": "string" },
    "url": { "type": "string" },
    "canon_version": { "type": "string" },
    "linked_claims": {
      "type": "array",
      "items": { "type": "string" }
    }
  }
}